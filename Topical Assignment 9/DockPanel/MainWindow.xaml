<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button Height="25" Background="red" DockPanel.Dock="Top" />
        <Button Width="25" Background="orange" DockPanel.Dock="Left" />
        <Button Height="25" Background="green" DockPanel.Dock="Bottom" />
        <Button Width="25" Background="yellow" DockPanel.Dock="Right" />
        <Button Background="purple" />
    </DockPanel>
</Window>
