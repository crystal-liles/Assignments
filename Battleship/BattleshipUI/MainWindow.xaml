<Window x:Class="BattleshipUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipUI"
        mc:Ignorable="d"
        Title="Battleship – Crystal Liles" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="114,14,0,0" Text="TxtPlayerName" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Player Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="87"/>
        <Border BorderThickness="1" BorderBrush="Black">
            <Canvas>
                <Canvas Height="127" Width="310" Canvas.Top="63" Canvas.Left="40">
                    <Button Content="Button" Canvas.Left="50" Canvas.Top="10" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="105" Canvas.Top="10" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="160" Canvas.Top="10" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="215" Canvas.Top="10" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="50" Canvas.Top="65" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="105" Canvas.Top="65" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="160" Canvas.Top="65" Height="50" Width="50"/>
                    <Button Content="Button" Canvas.Left="215" Canvas.Top="65" Height="50" Width="50"/>
                </Canvas>
            </Canvas>
        </Border>
        <Button Content="BtnNewGame" HorizontalAlignment="Left" Margin="292,14,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
