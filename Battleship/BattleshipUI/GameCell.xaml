<UserControl x:Class="BattleshipUI.GameCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleshipUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Button x:Name="BtnCellSegment" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="100" Margin="0,0,0,0" Width="100">
            <Button.Background>
                <ImageBrush ImageSource="Images/battleship_unknown.png"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>